@model S2_L3.Models.ViewModel.PrenotazioniViewModel

@{
    ViewData["Title"] = "Prenotazioni Effettuate";
}

<h2>@ViewData["Title"]</h2>

@if (Model?.Biglietti != null && Model.Biglietti.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Sala</th>
                <th>Tipo Biglietto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var biglietto in Model.Biglietti)
            {
                <tr>
                    <td>@biglietto.Nome</td>
                    <td>@biglietto.Cognome</td>
                    <td>@biglietto.Sala</td>
                    <td>@biglietto.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nessuna prenotazione effettuata.</p>
}
